# Penta API Ayarları
PENTA_API_URL=https://api.penta.com.tr/api/products
PENTA_API_TOKEN=your_token_here

# Güncelleme Aralığı (dakika cinsinden)
UPDATE_INTERVAL_MINUTES=30

# Sunucu Ayarları
SERVER_PORT=3000

# API Request Parametreleri
# FieldsKey: all-fields, only-price, only-stock (opsiyonel)
FIELDS_KEY=all-fields

# ProductType: 1=XML, 2=Lisans, 3=XML+Lisans (zorunlu)
PRODUCT_TYPE=1

# Stock: true veya false (opsiyonel)
STOCK=true

# Category: Kategori kodu, virgülle ayrılmış birden fazla olabilir (opsiyonel)
# Örnek: 13003007001,13003007002
CATEGORY=

# Brand: Marka kodu (opsiyonel)
BRAND=

# ProductId: Ürün ID (opsiyonel)
PRODUCT_ID=

# UpdateDate: Güncelleme tarihi, format: D.MM.YYYY (opsiyonel)
UPDATE_DATE=

# Page: Sayfa numarası (opsiyonel)
PAGE=

# PageSize: Sayfa boyutu (opsiyonel)
PAGE_SIZE=
